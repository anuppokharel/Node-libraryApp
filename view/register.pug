extends base 

block content
    #body 
        form.register-form
            .name 
                label(for="name") name 
                input#name(type="text", name="name", placeholder="Enter your full name")
            .email 
                label(for="email") email 
                input#email(type="text", name="email", placeholder="Enter your email address")
            .image 
                label(for="image") image 
                input#image(type="file", name="image", style="border: none")
            .bio 
                label(for="bio") bio 
                input#bio(type="text", name="bio", placeholder="Enter your bio")
            .password 
                label(for="password") password 
                input#password(type="text", name="password", placeholder="Enter your password")
            .confirmPassword 
                label(for="confirmPassword") confirmPassword 
                input#confirmPassword(type="text", name="confirmPassword", placeholder="Enter your password again")
            div
                button(type="submit") Sign up
            p Already a member? <a href="/login" style="color: #7c7f85;">Login</a>